<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>Pokemon: 
	<%if @trainer.pokemons%>
		<%@trainer.pokemons.each do |pokemon| %>
		<br/>
			<% if pokemon.ndex %>
    			<%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") %>
  			<% end %>
			<%= pokemon.name %> is level <%= pokemon.level%> with <%= pokemon.health%> health.
			<%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
		<%end%>
	<%end%>
	<% if @trainer === current_trainer %>
		<%= button_to "Create new pokemon", '/pokemons/new', :class => "button small", :method => :get %>
	<%end%>
</p>